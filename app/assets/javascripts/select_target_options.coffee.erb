$(document).on 'change', '[data-select-target]', ->
  $target = $($(this).data('selectTarget'))
  # change could be triggered on autofill email and password which are not
  # current so ignore change events when are not under current
  return unless $(this).parents('li').hasClass('current')
  $(this).parents('li').removeClass('current')
  next = $target.parents('li').addClass('current')
  unless next.next()[0]
    $('#right-arrow').addClass('hide-not-important')
  $('#left-arrow').removeClass('hide-not-important')

$ ->
  $('#left-arrow').click ->
    $('#right-arrow').removeClass('hide-not-important')
    prev = $('.current').removeClass('current').prev()
    unless prev.prev()[0]
      $('#left-arrow').addClass('hide-not-important')
    prev.addClass('current')

  $('#right-arrow').click ->
    $('#left-arrow').removeClass('hide-not-important')
    next = $('.current').removeClass('current').next()
    unless next.next()[0]
      $('#right-arrow').addClass('hide-not-important')
    next.addClass('current')

$(document).on 'change', '[data-increase-abc]', ->
  $('.abc').addClass("increase-#{$(this).data('increaseAbc')}")
