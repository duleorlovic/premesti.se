<%
%>
<h1>
<%= t('my_moves') %>
</h1>
<ul class="list-unstyled">
  <% @moves.each do |move| %>
    <li class="show-on-hover">
      <%= link_to move do %>
        <%= move.group_age_and_locations %>
        <%= link_to t("delete"), move_path(move), method: :delete, class: "text-danger show-on-hover-target", 'data-confirm': t_crud('are_you_sure_to_remove_item', item: Move) %>
      <% end %>
    </li>
  <% end %>
</ul>
<%= modal id: 'find-on-map-modal', title: t('find_on_map'), fade: false %>
<input type="checkbox" id="toggle-active" class="toggle-active" />
<label for="toggle-active" class='btn btn-default'>
  <i class="fa fa-plus" aria-hidden="true"></i>
  <%= t('add_current_location') %>
</label>
<span class="toggle-active-target hide-not-important">
  <%= form_tag create_from_group_moves_path, class: 'inline' do %>
    <%= select_tag :from_group_age, options_for_select(1.upto(7).map {|a| [Group.title_for_age(a), a]}), label: t('neo4j.attributes.landing_signup.from_group'), required: true %>
    <%= select_tag :from_location_id, "", include_blank: t('neo4j.attributes.landing_signup.current_location'), id: 'from_location_id', 'data-select2-ajax-initialize': select2_locations_path, class: 'add-new-to-groups', required: true %>
    <span><%= t('or') %></span>
    <%= link_to t('find_on_map'), find_on_map_path(select_element: '#from_location_id'), "data-toggle": "modal", "data-target": "#find-on-map-modal" %>

    <%= button_tag t("add"), class: 'btn btn-primary' %>
  <% end %>
</span>


<h1>
<%= t('my_chats') %>
</h1>
<% if @chats.present? %>
  <ul class="list-unstyled">
    <% @chats.each do |chat| %>
      <li>
        <%= link_to chat do %>
          <%= chat.name_with_moves %>
        <% end %>
        <% if Rails.env.development? %>
          <%= link_to t("delete"), chat, method: :delete, class: 'text-danger' %>
        <% end %>
      </li>
    <% end %>
  </ul>
<% else %>
  <%= t('chats_empty_new_will_show_up_automatically') %>
<% end %>
