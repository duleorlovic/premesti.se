<% login_layout t('my_devise.forgot_password') %>

<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= f.email_field :email, label: t('neo4j.attributes.user.email'), autofocus: true %>

  <%= f.submit t("my_devise.send_me_reset_password_instructions") %>
<% end %>

<%= render "devise/shared/links" %>
