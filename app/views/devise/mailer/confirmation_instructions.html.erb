<p><%= t('hi_name', name: @email) %>!</p>

<% if @resource.created_at < Time.zone.now - 1.day %>
  <%= t('user_mailer.confirmation_instructions.we_notice_that_you_registered_time_ago', time_ago: time_ago_in_words(@resource.created_at)) %>
<% end %>
<p><%= t("user_mailer.landing_signup.description_of_service_unconfirmed") %></p>

<p><%= link_to t("confirm_email"), confirmation_url(@resource, confirmation_token: @token), class: 'button' %></p>
