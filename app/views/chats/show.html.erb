<%
  breadcrumb "#{Chat.model_name.human.mb_chars.capitalize} #{@chat.name_with_moves}" => nil
%>
<%= bootstrap_form_for @message, url: create_message_chat_path(@chat) do |f| %>
  <%= f.text_field :text, required: true %>
  <%= f.submit t_crud('create', Message) %>
<% end %>
<ul class="list-unstyled">
  <% @chat.messages.each do |message| %>
    <li class="show-on-hover">
      <%= message.text %>
      <small><%= message.user_location.name %></small>
      <% if message.user == current_user %>
        <%= link_to t("delete"), destroy_message_chat_path(@chat, message_id: message.id), method: :delete, class: "text-danger show-on-hover-target", 'data-confirm': t_crud('are_you_sure_to_remove_item', item: Message) %>
      <% end %>
    </li>
  <% end %>
</ul>



