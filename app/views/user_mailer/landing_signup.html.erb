<%
  subject_line @move.from_group.name
%>
<p><%= t('hi_name', name: @move.user.email) %>!</p>

<p>
  <%= t("user_mailer.landing_signup.description_of_service") %>
  <% unless @move.user.confirmed? %>
    <p>
      <%= t("user_mailer.landing_signup.confirmation_text") %>
    </p>
    <p><%= link_to t("confirm_email"), confirmation_url(@move.user, confirmation_token: @confirmation_token) %></p>
  <% end %>
</p>
